# FortiComm Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here

# Domain Configuration
DOMAIN=your-domain.com

# Grafana Admin Password
GRAFANA_PASSWORD=your_grafana_admin_password

# Federation (set to true to enable server-to-server)
FEDERATION_ENABLED=false

# Backup Encryption Key (generate with: openssl rand -base64 32)
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Cloud Storage Provider (dropbox, google, onedrive, or custom)
CLOUD_PROVIDER=dropbox

# OAuth Credentials for Cloud Storage
# DROPBOX_CLIENT_ID=your_dropbox_app_key
# DROPBOX_CLIENT_SECRET=your_dropbox_app_secret
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# License Key (for premium features)
# LICENSE_KEY=your_premium_license_key

# Air-gapped Mode (set to true for offline deployments)
AIR_GAPPED_MODE=false

# Hardware Security Module (HSM) Configuration
# HSM_ENABLED=false
# HSM_PROVIDER=yubikey
# HSM_PIN=your_hsm_pin

# Monitoring and Alerting
# ALERT_EMAIL=admin@your-domain.com
# ALERT_WEBHOOK=https://hooks.slack.com/your-webhook-url

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Message Size Limits
MAX_MESSAGE_SIZE=262144  # 256 KB
MAX_ATTACHMENT_SIZE=104857600  # 100 MB

# Auto-delete Configuration
DEFAULT_RETENTION_DAYS=30
MAX_RETENTION_DAYS=365

# Development Settings (do not use in production)
DEBUG=false
LOG_LEVEL=info
