# VAULT Messenger - Environment Configuration
# Copy this file to .env and fill in your values

# Email Service (Resend - Free Tier: 100 emails/day)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_YOUR_KEY_HERE

# Server Configuration (if self-hosting)
VAULT_SERVER_URL=wss://your-server.com/v1/stream
VAULT_API_URL=https://your-server.com/v1

# Database Encryption
# Generate with: openssl rand -hex 32
DB_ENCRYPTION_KEY=your-256-bit-encryption-key-here

# Security Settings
SESSION_TIMEOUT=300000
AUTO_LOCK_TIMEOUT=300000

# Application Settings
NODE_ENV=production
LOG_LEVEL=info

# Optional: Custom SMTP (alternative to Resend)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: Database Path (default: ~/.config/vault-messenger/)
# DATABASE_PATH=/custom/path/vault-messenger.db

# Optional: Server Settings (if running your own server)
# JWT_SECRET=your-jwt-secret-here
# PORT=8080
# WS_PORT=8081

# ============================================
# IMPORTANT SECURITY NOTES:
# ============================================
# 1. Never commit this file to version control
# 2. Use strong, random values for all secrets
# 3. Keep API keys confidential
# 4. Rotate keys regularly
# 5. Use environment-specific .env files
# ============================================
