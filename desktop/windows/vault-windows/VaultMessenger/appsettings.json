{
  "AppSettings": {
    "AppName": "VAULT Messenger",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "RelayServer": {
    "WebSocketUrl": "wss://relay.vault.messaging/v1/stream",
    "ApiUrl": "https://api.vault.messaging/v1",
    "ReconnectIntervalMs": 5000,
    "MaxReconnectAttempts": 10
  },
  "Email": {
    "Provider": "Mailgun",
    "ApiKey": "YOUR_MAILGUN_API_KEY_HERE",
    "Domain": "sandboxXXXXXXXXXXXXXXXXXXXXXXXXXXXX.mailgun.org",
    "FromEmail": "noreply@b2g-vault",
    "FromName": "VAULT Messenger"
  },
  "Security": {
    "AutoLockTimeoutMinutes": 5,
    "MaxLoginAttempts": 5,
    "PasswordMinLength": 12,
    "RequireBiometric": false,
    "EnableScreenshotProtection": true
  },
  "Database": {
    "FileName": "vault.db",
    "EnableEncryption": true
  },
  "Logging": {
    "LogLevel": "Information",
    "LogFilePath": "logs/vault-.log",
    "RetainDays": 7
  },
  "Features": {
    "DisappearingMessages": true,
    "VoiceCalls": true,
    "VideoCalls": true,
    "ScreenSharing": false,
    "MultiDevice": true,
    "MaxDevicesPerAccount": 5
  }
}
